<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:icon="@drawable/ic_theme"
        app:defaultValue="default"
        app:entries="@array/theme_pref_entries"
        app:entryValues="@array/theme_pref_values"
        app:key="theme_pref"
        app:title="@string/label_theme_setting"
        app:useSimpleSummaryProvider="true"/>
    <ListPreference
        android:icon="@drawable/ic_height"
        app:defaultValue="millimeters"
        app:entries="@array/distance_units_entries"
        app:entryValues="@array/distance_units_values"
        app:key="enlarger_height_units"
        app:title="@string/label_enlarger_height_units"
        app:useSimpleSummaryProvider="true" />
    <ListPreference
        android:icon="@drawable/ic_exposure"
        app:defaultValue="full_stops"
        app:entries="@array/exposure_increments_entries"
        app:entryValues="@array/exposure_increments_values"
        app:key="exposure_increments"
        app:title="@string/label_exposure_increments"
        app:useSimpleSummaryProvider="true" />
</PreferenceScreen>